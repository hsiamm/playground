<?xml version="1.0" encoding="utf-8"?>
<element type="gallery" group="Media">
	<name>Gallery</name>
	<author>YOOtheme</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2007 - 2011 YOOtheme GmbH</copyright>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.yootheme.com</authorUrl>
	<version>1.0.0</version>
	<description>YOOgallery</description>
	<params>
		<param name="name" type="text" default="" label="Name" description="Name used in item editor" />
		<param name="description" type="text" default="" label="Description" description="DESCRIPTION_TOOLTIP_ITEM_EDITOR" />
		<param name="access" type="zooaccesslevel" default="" label="Access Level" description="DETAILACCESS" />
		<param name="directory" type="text" default="images" label="Source Directory" description="The gallery source directory inside the Joomla root directory" />
		<param name="cache_time" type="text" default="1440" label="CACHE TIME MIN" description="TIME_UNTIL_THUMBNAIL_IMAGE_RECACHED" />
		<param name="load_lightbox" type="radio" default="0" label="Load Lightbox" description="Load included lightbox JavaScript">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>		
		<param name="rel" type="text" default="" label="Lightbox Rel Parameter" description="CUSTOM_REL_PARAMETER" />
	</params>
	<params group="render">
		<param name="showlabel" type="radio" default="0" label="Show Label" description="Show/Hide element label">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="altlabel" type="text" default="" label="Alternative Label" description="CUSTOM_LABEL" />
		<param name="mode" type="list" default="lightbox" label="Mode" description="The gallery mode">
			<option value="lightbox">Lightbox</option>
			<option value="slideshow">Slideshow</option>
		</param>
		<param name="effect" type="list" default="fade" label="Slideshow Transition" description="IMAGE_TRANSITION_EFFECT">
			<option value="fade">Fade</option>
			<option value="wipe">Wipe</option>
			<option value="slide">Slide</option>
			<option value="random">Random</option>
		</param>
		<param name="thumb" type="list" default="default" label="Thumbnail Style" description="The thumbnail style">
			<option value="default">Default</option>
			<option value="polaroid">Polaroid</option>
			<option value="rounded">Rounded</option>
			<option value="cut">Cut</option>
			<option value="plain">Plain</option>
		</param>
		<param name="order" type="list" default="asc" label="Thumbnail Ordering" description="The thumbnail ordering">
			<option value="asc">Ascending</option>
			<option value="desc">Descending</option>
			<option value="random">Random</option>
		</param>
		<param name="spotlight" type="radio" default="0" label="Thumbnail Spotlight" description="Thumbnail opacity will change on mouse hover">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>		
		<param name="width" type="text" default="100" label="THUMBNAIL WIDTH PX" description="DEFAULT_THUMBNAIL_WIDTH" />
		<param name="height" type="text" default="0" label="THUMBNAIL HEIGHT PX" description="DEFAULT_THUMBNAIL_HEIGHT" />
		<param name="resize" type="radio" default="1" label="Thumbnail Resizing" description="SOURCE_IMAGE_RESIZED">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>		
		<param name="count" type="text" default="0" label="Thumbnail Count" description="LIMIT_THUMBNAILS_TO_SHOW" />	
	</params>
</element>