<?xml version="1.0" encoding="utf-8"?>
<application>
	<name>Intern Blog</name>
	<group>blog</group>
	<version>2.4.0</version>
	<creationDate>July 2011</creationDate>
	<author>Jason Kennedy</author>
	<authorEmail>jhkennedy@utexas.edu</authorEmail>
	<authorUrl>http://www.austinstone.org</authorUrl>
	<description><![CDATA[
				This is the staff blog app for ZOO 2.4 developed by Jason Kennedy.
				]]>
	</description>
	<params group="application-config">
		<param name="items_per_page" type="text" size="3" default="15" label="Items Per Page" description="Number of items to show on a page" />
		<param name="item_order" type="list" default="rdate" label="Item Order" description="ITEM_ORDER">
			<option value="rdate">Latest first</option>
			<option value="date">Latest last</option>
			<option value="alpha">Alphabetical</option>
			<option value="ralpha">Reverse Alphabetical</option>
			<option value="hits">Most Hits</option>
			<option value="rhits">Least Hits</option>
		</param>
		<param name="show_feed_link" type="zoofeed" default="1" label="Show Feed Link" description="DISPLAY_FEED_LINKS" />	
	</params>
	<params group="category-config">
		<param name="items_per_page" type="textglobal" size="3" default="15" label="Items Per Page" description="Number of items to show on a page" />
		<param name="item_order" type="listglobal" default="rdate" label="Item Order" description="ITEM_ORDER">
			<option value="rdate">Latest first</option>
			<option value="date">Latest last</option>
			<option value="alpha">Alphabetical</option>
			<option value="ralpha">Reverse Alphabetical</option>
			<option value="hits">Most Hits</option>
			<option value="rhits">Least Hits</option>
		</param>
		<param name="show_feed_link" type="zoofeedglobal" default="1" label="Show Feed Link" description="DISPLAY_FEED_LINKS" />
	</params>
	<params group="item-config">
	</params>
	<params group="application-content">
		<param name="title" type="text" label="Title" description="Set a frontpage title." />
		<param name="subtitle" type="text" label="Subtitle" description="Set a subtitle." />
		<param name="image" type="zooimage" label="Image" description="Choose a frontpage image." />
	</params>
	<params group="category-content">
		<param name="sub_headline" type="text" label="Sub Headline" description="Set a sub headline." />
		<param name="image" type="zooimage" label="Image" description="Choose a category image." />
	</params>
	<params group="item-content">	
	</params>
</application>